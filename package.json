{
  "name": "andcetera",
  "version": "0.1.0",
  "description": "Tools to further your iterator pipelines",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "check": "tsc",
    "docs": "typedoc src/index.js",
    "lint": "eslint --ignore-path .ignore .",
    "lint:fix": "npm run lint -- --fix",
    "test": "c8 ava",
    "test:watch": "ava --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/runarberg/andcetera.git"
  },
  "keywords": [
    "itertools",
    "iterator-helpers",
    "iterator"
  ],
  "author": "Rúnar Berg Baugsson Sigríðarson <runarberg@zoho.com>",
  "bugs": {
    "url": "https://github.com/runarberg/andcetera/issues"
  },
  "homepage": "https://github.com/runarberg/andcetera#readme",
  "license": "MIT",
  "c8": {
    "reporter": [
      "html",
      "text",
      "text-summary"
    ],
    "include": [
      "src/**/*.js",
      "!src/**/*.{spec,test}.js",
      "!src/**/__tests__/*.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": false,
      "browser": true
    },
    "parserOptions": {
      "ecmaVersion": "2020",
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:ava/recommended",
      "plugin:import/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "accessor-pairs": "error",
      "array-callback-return": "error",
      "class-methods-use-this": "error",
      "eqeqeq": [
        "error",
        "always",
        {
          "null": "ignore"
        }
      ],
      "grouped-accessor-pairs": "error",
      "import/extensions": [
        "error",
        "ignorePackages"
      ],
      "import/first": "error",
      "import/no-commonjs": "error",
      "import/no-duplicates": "error",
      "import/order": [
        "warn",
        {
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ],
      "no-alert": "error",
      "no-caller": "error",
      "no-console": "warn",
      "no-debugger": "warn",
      "no-else-return": [
        "error",
        {
          "allowElseIf": false
        }
      ],
      "no-eval": "error",
      "no-extend-native": "error",
      "no-extra-bind": "error",
      "no-implicit-coercion": "error",
      "no-implied-eval": "error",
      "no-invalid-this": "error",
      "no-labels": "error",
      "no-lone-blocks": "error",
      "no-multi-str": "error",
      "no-new": "error",
      "no-new-func": "error",
      "no-new-wrappers": "error",
      "no-octal-escape": "error",
      "no-param-reassign": "error",
      "no-return-assign": "error",
      "no-return-await": "error",
      "no-script-url": "error",
      "no-self-compare": "error",
      "no-sequences": "error",
      "no-shadow": "error",
      "no-template-curly-in-string": "error",
      "no-throw-literal": "error",
      "no-unmodified-loop-condition": "error",
      "no-unused-expressions": "error",
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_"
        }
      ],
      "no-useless-backreference": "error",
      "no-useless-concat": "error",
      "no-useless-return": "error",
      "no-var": "error",
      "no-void": "error",
      "object-shorthand": "error",
      "prefer-arrow-callback": "error",
      "prefer-const": "error",
      "prefer-destructuring": "error",
      "prefer-promise-reject-errors": "error",
      "prefer-template": "error",
      "radix": "error",
      "require-atomic-updates": "error"
    }
  },
  "prettier": {
    "trailingComma": "all"
  },
  "devDependencies": {
    "ava": "^3.9.0",
    "c8": "^7.2.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-ava": "^11.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "prettier": "^2.2.1",
    "typedoc": "^0.20.0-beta.27",
    "typescript": "^4.1.3"
  }
}
