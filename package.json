{
  "name": "@runarberg/yta",
  "version": "0.1.0",
  "description": "Tools to further your iterator pipelines",
  "type": "module",
  "main": "src/index.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "default": "./src/index.js"
    },
    "./async": {
      "types": "./types/async/index.d.ts",
      "default": "./src/async/index.js"
    },
    "./sync": {
      "types": "./types/sync/index.d.ts",
      "default": "./src/sync/index.js"
    }
  },
  "scripts": {
    "check": "tsc",
    "docs": "typedoc src/index.js src/sync/index.js src/async/index.js",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "npm run types",
    "test": "node --test",
    "test:coverage": "node --test --experimental-test-coverage --test-reporter=spec --test-reporter-destination stdout --test-reporter=lcov --test-reporter-destination=coverage/lcov.info ",
    "pretest:coverage": "mkdir -p coverage",
    "test:watch": "node --test --watch",
    "types": "tsc src/**/*.js --allowJS --declaration --declarationMap --emitDeclarationOnly --esModuleInterop --outDir types"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/runarberg/yta.git"
  },
  "keywords": [
    "itertools",
    "iterator-helpers",
    "iterator"
  ],
  "author": "Rúnar Berg Baugsson Sigríðarson <runarberg@zoho.com>",
  "bugs": {
    "url": "https://github.com/runarberg/yta/issues"
  },
  "homepage": "https://github.com/runarberg/yta#readme",
  "license": "MIT",
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.10.6",
    "eslint": "^9.18.0",
    "eslint-plugin-jsdoc": "^50.6.1",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.14.0",
    "prettier": "3.4.2",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.3"
  }
}
